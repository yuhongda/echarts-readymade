{
  "compileOnSave": true,
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist",
    "module": "ESNext",
    "lib": ["ESNext", "dom"],
    "sourceMap": false,
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": false,
    "resolveJsonModule": true
  }
}
